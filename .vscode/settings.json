{
  //! FORMATTING
  "prettier.enable": true,
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,
  "eslint.format.enable": true,
  "json.format.enable": false,
  "html.format.enable": false,
  "scss.format.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  //! ACTIONS
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.format": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports": "explicit",
    "source.fixAll.markdownlint": "explicit"
  },
  "files.autoSave": "off",

  //! LINTING
  "eslint.enable": true,
  "eslint.debug": true,
  "eslint.lintTask.enable": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "stylelint.enable": true,
  "stylelint.validate": ["css", "postcss", "scss", "typescript"],
  "stylelint.config": null,
  "stylelint.reportNeedlessDisables": true,
  "json.validate.enable": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "markdown.validate.enabled": false,
  "javascript.validate.enable": false,

  //! EDITING
  "editor.linkedEditing": true,
  "editor.autoIndent": "full",
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true
  },
  "files.watcherExclude": {
    "**/*.spec.ts": true,
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/storybook-static": true,
    "**/android": true,
    "**/ios": true,
    "**/lib": true,
    "**/coverage": true,
    "**/dist": true
  },
  "search.exclude": {
    "**/*.spec.ts": true,
    "**/*.snap": true,
    "**/.git": true,
    "**/node_modules": true,
    "**/storybook-static": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/android": true,
    "**/ios": true,
    "**/lib": true,
    "**/coverage": true,
    "**/dist": true
  },
  "search.useIgnoreFiles": true,

  //! UTILITIES
  "autoimport.autoComplete": true,
  "autoimport.filesToScan": "src/**/*.{js,jsx,ts,tsx}",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.renderWhitespace": "boundary",
  "javascript.suggest.autoImports": true,
  "javascript.suggest.enabled": true,
  "javascript.suggest.paths": false,
  "rewrap.autoWrap.enabled": true,
  "rewrap.autoWrap.notification": "icon", // "icon" | "text"
  "rewrap.doubleSentenceSpacing": false,
  "rewrap.wholeComment": false,
  "rewrap.wrappingColumn": 80,

  //! TYPESCRIPT
  "tsimporter.filesToScan": ["src/**/*.ts", "src/**/*.tsx"],
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.tsdk": "node_modules/typescript/lib",

  //! FILE EXTENSION SPECIFIC OVERRIDES
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "rewrap.autoWrap.enabled": false
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  }
}
